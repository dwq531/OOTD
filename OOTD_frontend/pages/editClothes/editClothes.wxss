Page {
  height:100%;
  width:100%;
  background-color: #f5f5f5;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
}
.image {
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:240px;
  background-color: white;
}
.image image{
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.name {
  position:absolute;
  top:240px;
  height:50px;
  width:100%;
  background-color: white;
  margin-top: 10px;
  color:gray;
}
text{
  position: absolute;
  top:15px;
  left:30px;
}
.name input{
  width:200px;
  height:30px;
  border:rgb(209, 209, 209) solid 1px;
  position:absolute;
  right:10px;
  top:10px;
  padding-left:10px;
}
.category {
  position:absolute;
  top:300px;
  height:50px;
  width:100%;
  background-color: white;
  margin-top: 10px;
  color:gray;
}
.detail {
  position:absolute;
  top:360px;
  height:50px;
  width:100%;
  background-color: white;
  margin-top: 10px;
  color:gray;
}
picker {
  width:200px;
  height:30px;
  border:rgb(209, 209, 209) solid 1px;
  position:absolute;
  right:10px;
  top:10px;
  padding-left:10px;
}
#saveBut {
  position:absolute;
  left:20px;
  bottom:30px;
  width:90%;
  color:white;
  background-color: rgb(170, 196, 233);
}
#deleteBut {
  position:absolute;
  left:20px;
  bottom:80px;
  width:90%;
  color:white;
  background-color: rgb(255, 104, 104);
}

#addImgBut {
  z-index: 20;
  width:50px;
  height:50px;
  position:absolute;
  right:20px;
  bottom:10px;
  padding:0;
  border:none;
}
#addImgBut image{
  width:50px;
  height:50px;
}
form{
  width:100%;
}