  /* 设置阴影效果 */
  box-shadow: 0 2px 4px rgba(170, 196, 233, 1);
  /* 添加过渡效果，使变化更平滑 */
  transition: background-color 0.2s, border-color 0.2s;
  display: flex;
  align-items: center; /* 在交叉轴上居中 */
  justify-content: center; /* 在主轴上居中 */
  overflow: hidden;
}
