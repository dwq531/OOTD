page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
  padding: 0;
}

.scroller {
  width:100%;
  height:90%;
  display: flex;
}

.post {
  background-color: #f5f5f5;
  box-sizing: border-box;
  break-inside: avoid;
  padding: 10px;
  float:left;
  width:50%;
}

.post-image {
  width: 100%;
  height: 100%;
}

.post-details {
  margin-top: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-content {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.post-author {
  font-size: 24rpx;
  color: gray;
}

.icon {
  width: 20px;
  height: 20px;
}
.post-data {
  height:20px;
  display: flex;
}
.post-likes ,.post-comments,.post-favorites{
  margin-right: 10px;
}
.post-comments{
  border-top:solid 1px gray;
  margin-top: 10px;
}
.comment-item{
  height:60px;
  width:100%;
  margin-top: 10px;
  border-bottom: solid 1px gray;
  position: relative;
}
.comment-author{
  position: absolute;
  top:0px;
  left:30px;
}
.comment-content{
  position: absolute;
  top:20px;
  left:30px
}
.comment-time {
  position: absolute;
  bottom:5px;
  right:0px
}