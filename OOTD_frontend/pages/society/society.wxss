page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
  padding: 0;
}

.scroller {
  width:100%;
  height:calc(100vh - 40px) ;
  top:40px;
  background-color: #f5f5f5;
  position: relative;
}
.fall_left {
  width:45%;
  display: flex;
  flex-direction: column;
  margin-left:3%;
}
.fall_right {
  position: absolute;
  top:0;
  right:3%;
  width:45%;
  display: flex;
  flex-direction: column;
}
.post {
  background-color: white;
  box-sizing: border-box;
  break-inside: avoid;
  padding: 10px;
  float:left;
  margin-top:10px;
  border-radius: 10px;
}

.post-image {
  width: 100%;
  height: 100%;
}

.post-details {
  margin-top: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-content {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.post-author {
  font-size: 24rpx;
  color: gray;
}

.icon {
  width: 20px;
  height: 20px;
}
.post-data {
  height:20px;
  display: flex;
}
.post-likes ,.post-comments,.post-favorites{
  margin-right: 10%;
}
.post-data text{
  position: relative;
  top:-3px;
  margin-left:3px;
}
.menu {
  width:100%;
  position: fixed;
  height:40px;
  top:0px;
  left:0px;
  z-index: 99;
  background-color: white;
  box-shadow:3px 1px 5px gray;
}
.menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  height:30px;
  margin-left: 10%;
  margin-right: 10%;
  font-weight: bold;
  font-size: 20px;
}
.menu_itemactive{
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  height:30px;
  margin-left: 10%;
  margin-right: 10%;
  font-size: 20px;
  font-weight: bold;
  color:cornflowerblue;
  border-bottom: solid 3px cornflowerblue;
}
.avatar {
  width:25px;
  height:25px;
  margin-right: 10px;
}
.post-author text{
  position: relative;
  top:-5px;
}